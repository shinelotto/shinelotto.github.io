---
layout: layout.njk
title: 双色球数据分析
---
<div class="container">
  <h2>历史开奖数据（共{{ data.ssqhistory.length }}期）</h2>
  
  <!-- 搜索框 -->
  <input type="text" id="search" placeholder="输入期号搜索..." class="search-box">

  <!-- 数据表格 -->
  <div class="table-container">
    <table id="lottery-table">
      <thead>
        <tr>
          <th @click="sortTable(0)">期号 ▼</th>
          <th @click="sortTable(1)">红球1</th>
          <th @click="sortTable(2)">红球2</th>
          <th @click="sortTable(3)">红球3</th>
          <th @click="sortTable(4)">红球4</th>
          <th @click="sortTable(5)">红球5</th>
          <th @click="sortTable(6)">红球6</th>
          <th @click="sortTable(7)">蓝球</th>
          <th>开奖日期</th>
        </tr>
      </thead>
      <tbody>
        {% for item in data.ssqhistory %}
        <tr>
          <td>{{ item.期号 }}</td>
          <td class="red-ball">{{ item.红球1 }}</td>
          <td class="red-ball">{{ item.红球2 }}</td>
          <td class="red-ball">{{ item.红球3 }}</td>
          <td class="red-ball">{{ item.红球4 }}</td>
          <td class="red-ball">{{ item.红球5 }}</td>
          <td class="red-ball">{{ item.红球6 }}</td>
          <td class="blue-ball">{{ item.蓝球 }}</td>
          <td>{{ item.日期 }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<style>
  /* 添加到layout.njk的style部分 */
  .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
  .search-box {
    padding: 10px; width: 300px; margin-bottom: 20px;
    border: 1px solid #ddd; border-radius: 4px;
  }
  .table-container { overflow-x: auto; }
  #lottery-table {
    width: 100%; border-collapse: collapse;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }
  #lottery-table th {
    background: #f0f0f0; padding: 12px; cursor: pointer;
    position: sticky; top: 0;
  }
  #lottery-table td { padding: 10px; text-align: center; }
  #lottery-table tr:nth-child(even) { background: #f9f9f9; }
  #lottery-table tr:hover { background: #f0f7ff; }
</style>

<script>
// 添加排序和搜索功能
document.addEventListener('DOMContentLoaded', function() {
  // 表格排序
  function sortTable(columnIndex) {
    const table = document.getElementById('lottery-table');
    // 实际排序逻辑需要更复杂的实现
    alert('排序功能需配合JavaScript库实现');
  }

  // 搜索功能
  document.getElementById('search').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const rows = document.querySelectorAll('#lottery-table tbody tr');
    
    rows.forEach(row => {
      const period = row.cells[0].textContent;
      row.style.display = period.includes(searchTerm) ? '' : 'none';
    });
  });
});
</script>
<!-- 号码频率图表 -->
{% include "chart.njk" with {
  chartId: "frequencyChart",
  chartType: "bar",
  chartData: {
    labels: stats.redHot.map(item => item.number),
    datasets: [{
      label: '红球出现次数',
      data: stats.redHot.map(item => item.count),
      backgroundColor: '#ff6384'
    }]
  },
  chartOptions: {
    responsive: true,
    plugins: {
      title: { display: true, text: '红球热门号码TOP10' }
    }
  }
} %}
<section class="recommend-section">
  <h2>今日推荐（{{ recommend.today }}）</h2>
  
  <div class="recommend-cards">
    <div class="card">
      <h3>热门组合</h3>
      <div class="balls">
        {% for num in recommend.recommend.hotCombo.slice(0,6) %}
          <span class="red-ball">{{ num }}</span>
        {% endfor %}
        <span class="blue-ball">{{ recommend.recommend.hotCombo[6] }}</span>
      </div>
    </div>
    
    <div class="card">
      <h3>平衡组合</h3>
      <div class="balls">
        {% for num in recommend.recommend.balanceCombo.slice(0,6) %}
          <span class="red-ball">{{ num }}</span>
        {% endfor %}
        <span class="blue-ball">{{ recommend.recommend.balanceCombo[6] }}</span>
      </div>
    </div>
  </div>
</section>

<style>
.recommend-section { margin-top: 40px; }
.recommend-cards {
  display: flex; gap: 20px; margin-top: 15px;
  flex-wrap: wrap;
}
.card {
  border: 1px solid #eee; padding: 15px;
  border-radius: 8px; flex: 1;
  min-width: 250px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.balls { display: flex; gap: 8px; flex-wrap: wrap; }
.ball {
  width: 30px; height: 30px; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-weight: bold;
}
</style>